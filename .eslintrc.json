{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": [
    "import",
    "sort-keys-fix"
  ],
  "rules": {
    "no-inline-comments": "error",
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 0,
        "maxBOF": 0
      }
    ],
    "no-trailing-spaces": "error",
    "array-element-newline": [
      "error",
      {
        "minItems": 2
      }
    ],
    "array-bracket-newline": [
      "error",
      {
        "minItems": 2
      }
    ],
    "object-curly-newline": [
      "error",
      {
        "minProperties": 2
      }
    ],
    "object-property-newline": [
      "error",
      {
        "allowMultiplePropertiesPerLine": false
      }
    ],
    "import/newline-after-import": [
      "error"
    ],
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "newlines-between": "always"
      }
    ],
    "sort-keys-fix/sort-keys-fix": [
      "error",
      "asc",
      {
        "caseSensitive": true,
        "natural": true
      }
    ],
    "multiline-ternary": [
      "error",
      "always"
    ],
    "no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": false
      }
    ],
    "no-undef": "error",
    "no-use-before-define": [
      "error",
      {
        "functions": false,
        "classes": true,
        "variables": true
      }
    ],
    "no-redeclare": [
      "error",
      {
        "builtinGlobals": true
      }
    ],
    "no-const-assign": "error",
    "no-class-assign": "error",
    "no-dupe-args": "error",
    "no-dupe-keys": "error",
    "no-duplicate-case": "error",
    "no-extra-semi": "error",
    "no-func-assign": "error",
    "no-global-assign": "error",
    "no-implicit-globals": "error",
    "no-invalid-regexp": "error",
    "no-template-curly-in-string": "error",
    "no-unreachable": "error",
    "no-unused-expressions": "error",
    "block-scoped-var": "error",
    "curly": [
      "error"
    ],
    "eqeqeq": [
      "error",
      "always",
      {
        "null": "ignore"
      }
    ],
    "no-eq-null": "error",
    "no-else-return": [
      "error",
      {
        "allowElseIf": false
      }
    ],
    "no-nested-ternary": "error",
    "no-var": "error",
    "prefer-const": [
      "error",
      {
        "destructuring": "all",
        "ignoreReadBeforeAssign": true
      }
    ],
    "arrow-body-style": [
      "error",
      "always"
    ],
    "arrow-parens": [
      "error",
      "always"
    ],
    "prefer-template": "error",
    "no-eval": "error",
    "no-with": "error",
    "no-shadow": [
      "error",
      {
        "builtinGlobals": true,
        "hoist": "functions"
      }
    ],
    "no-shadow-restricted-names": "error",
    "no-multi-assign": "error",
    "no-array-constructor": "error",
    "no-new-object": "error",
    "no-new-func": "error",
    "no-new-wrappers": "error",
    "no-extra-bind": "error",
    "no-debugger": "error",
    "no-unsafe-negation": "error",
    "no-mixed-operators": [
      "error",
      {
        "groups": [
          [
            "&&",
            "||"
          ]
        ],
        "allowSamePrecedence": true
      }
    ],
    "consistent-return": "error",
    "indent": [
      "error",
      2
    ],
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "dot-notation": [
      "error",
      {
        "allowKeywords": true
      }
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "array-bracket-spacing": [
      "error",
      "never"
    ],
    "key-spacing": [
      "error",
      {
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "object-shorthand": [
      "error",
      "never"
    ],
    "quote-props": [
      "error",
      "always"
    ],
    "no-cond-assign": [
      "error",
      "always"
    ],
    "no-multi-spaces": "error",
    "import/no-unresolved": "error",
    "import/named": "error",
    "import/default": "error",
    "import/namespace": "error"
  },
  "overrides": [
    {
      "files": [
        "**/*.json"
      ],
      "parser": "jsonc-eslint-parser"
    },
    {
      "files": [
        "scripts/**/*.{js,mjs}",
        "src/**/*.{js,mjs}",
        "test/**/*.{js,mjs}"
      ],
      "excludedFiles": [
        "node_modules/**",
        "dist/**"
      ]
    }
  ]
}